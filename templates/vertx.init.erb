description "start and stop the AdCade Vert.x server"
version "1.0"
author "Rob Terhaar"
author "Yangming Huang"

description "<%= @verticle_name %> vertx server"
#umask 0007
respawn limit 15 5
oom never

start on (local-filesystems
    and net-device-up IFACE!=lo)
stop on shutdown

respawn

pre-start script
  . /etc/<%= @verticle_name %>.conf
  rm -rf $LOG_DIR
  mkdir -p -m0755 $LOG_DIR
  chown $USER:$GROUP $LOG_DIR
end script

script
  . /etc/<%= @verticle_name %>.conf
  OPTS="-Djava.ext.dirs=lib"
  chdir $APP_DIR
  JAVA_OPTS="-Xms${XMS} -Xmx${XMX} -Xss${XSS} $OPTS"
  exec su -s /bin/sh -c "/usr/local/bin/vertx run ${RUN} -cp ${CP}" $USER > ${LOG_DIR}/vertx.stdio 2>&1
end script

post-stop script
end script
